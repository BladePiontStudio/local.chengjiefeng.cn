#/public/.htaccess
#The second set of rules will check if the requested file exists and,
#if it does, it doesnâ€™t have to be rewritten by the web server module
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^((?s).*)$ index.php?_url=/$1 [QSA,L]
</IfModule>